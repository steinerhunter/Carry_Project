<header class="navbar navbar-inverse">
  <div class="navbar-inner">
    <div class="container" style="width:970px">
      <%= link_to "sendd.me", root_path, id: "logo" %>
      <div class="header_beta">
        beta
      </div>
      <nav>
        <ul class="nav pull-right" id="header_items">
          <li id="header_transporters"><%= link_to "Pick Up", pickups_path  %></li>
          <li id="header_takers"><%= link_to "Find Item", giveaways_path  %></li>
          <li id="header_givers"><%=  link_to "Give Away", request_path, class:"modal-link",
                          "data-target" => "#giveAwayModal",
                          "data-toggle" => "modal",
                          "data-backdrop" => "static" %></li>
          <% if signed_in?  %>
              <li id="header_activity"><%= link_to "Activity", activity_path %></li>
              <% if facebook_authorization(current_user)  %>
                  <li id="header_user"><%= link_to facebook_profile_photo(current_user,"header")+current_user.name, current_user  %></li>
              <% else  %>
                  <li id="header_user"><%= link_to header_gravatar_for(current_user)+current_user.name, current_user  %></li>
              <% end  %>
          <% else  %>
              <li id="header_how_it_works"><%= link_to "How It Works", root_path(:anchor =>'how_it_works'), class:"smoothScroll" %></li>
              <li id="header_sign_in"><%=  link_to "Sign in", signin_path, class:"modal-link",
                                                  "data-target" => "#signinModal",
                                                  "data-toggle" => "modal",
                                                  "data-backdrop" => "static" %></li>
              <li id="header_register"><%=  link_to "Sign up", signup_path, class:"modal-link",
                                                   "data-target" => "#signupModal",
                                                   "data-toggle" => "modal",
                                                   "data-backdrop" => "static" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>