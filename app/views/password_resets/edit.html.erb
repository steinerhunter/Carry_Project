<div class="signup_form_class">
  <div class="form_title">
    <b style="padding-left:35px">Pick a New Password</b>
  </div>
  <%= form_for @user, :url => password_reset_path(params[:id]), :remote => true do |f| %>
      <%=  render 'shared/error_messages', object: f.object  %>
      <div class="signup_fields" style="height: 100px">
        <div class="myfield_signup">
          <%= f.label :password, "Choose a new Password:" %>
          <%= f.password_field :password, :placeholder => "At least 8 characters"  %>
        </div>
        <div class="myfield_signup">
          <%= f.label :password_confirmation, "Confirm your Password:" %>
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
      <div class="button_signup">
        <%=  f.submit "Update!", :type => :image, :src => "../../assets/UpdatePassword.png"  %>
      </div>
  <% end  %>
</div>