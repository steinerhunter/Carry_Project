<div class="edit_delivery_field_wrapper" style="background-image: url('../assets/money.png');">
  <%= form_for(@request_delivery, :remote => true ) do |f| %>
      <div class="edit_delivery_field_cost">
            How much will you pay?<%= f.text_field :cost  %><%= f.select :currency, options_for_select(%w[ILS USD EUR], :selected => @request_delivery.currency) %>
      </div>
      <div class="edit_update">
        <%= f.submit "Update Request" , :id => 'submit_delivery' %>
      </div>
  <% end  %>
</div>
