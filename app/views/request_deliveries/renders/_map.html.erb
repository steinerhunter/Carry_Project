<% if @taking_user == current_user %>
    <% if  @request_delivery.status == "Taken" %>
        <div id="current-delivery-map" style="height:387px;margin-top: 70px;"></div>
    <% else  %>
        <div id="current-delivery-map" style="height: 452px; margin-top: 0px;"></div>
    <% end  %>
<% elsif @request_delivery.user != current_user %>
    <% if  @request_delivery.status == "Confirmed" ||
                 @request_delivery.status == "Complete" ||
                 @request_delivery.status == "TransporterReviewed" %>
        <div id="current-delivery-map" style="height: 452px; margin-top: 0px;"></div>
    <% else  %>
        <div id="current-delivery-map" style="height:387px;margin-top: 70px;"></div>
    <% end  %>
<% else %>
    <div id="current-delivery-map" style="height: 452px; margin-top: 0px;"></div>
<% end  %>
