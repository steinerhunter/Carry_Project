            (current_user == @request_delivery.user && (@request_delivery.status == "Taken" || @request_delivery.status == "ReceiverConfirmed" || @request_delivery.status == "Complete")) ||
              @request_delivery.status == "WaitingForTransporter" || @request_delivery.status == "Pending Confirmation" || @request_delivery.status == "Confirmed" %>
    <%= render 'show_taken' %>
<% else  %>
    <%= render 'show_non_taken' %>
<% end  %>
